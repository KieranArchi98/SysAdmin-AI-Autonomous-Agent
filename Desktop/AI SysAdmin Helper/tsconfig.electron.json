{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "lib": [
            "ESNext"
        ],
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "dist-electron",
        "resolveJsonModule": true
    },
    "include": [
        "electron/**/*.ts"
    ]
}